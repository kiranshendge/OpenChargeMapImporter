{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",                            
      "esModuleInterop": true,                             
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "strict": true,                                      
      "skipLibCheck": true ,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "./dist",
      "resolveJsonModule": true                              
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
  